<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Collectopia</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="/js/home.js" defer></script>
    <link rel="stylesheet" href="/css/home.css">
    <style>
        .social-icons {
            margin-top: 10px;
        }
        .social-icons a {
            display: inline-block;
            margin: 0 10px;
            font-size: 20px;
            color: black;
            transition: color 0.3s;
        }
        .social-icons a:hover {
            color: #007bff;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="/home">
                <img src="/image/logo.png" alt="Collectopia" class="logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/home">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/category">Category</a></li>
                    <li class="nav-item"><a class="nav-link" href="/team">Team</a></li>
                    <li class="nav-item"><a class="nav-link" href="/search">Search</a></li>
                    <% if (user) { %>
                        <li class="nav-item"><a class="nav-link" href="/admin">Profile (<%= user.firstName %>)</a></li>
                        <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
                    <% } else { %>
                        <li class="nav-item"><a class="nav-link" href="/login">Sign-in/Register</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <div class="slideshow-container">
        <div class="mySlides fade">
            <div class="numbertext"></div>
            <img src="/image/home/genshin.png" style="width:100%">
            <div class="text"></div>
        </div>
        <div class="mySlides fade">
            <div class="numbertext"></div>
            <img src="/image/home/haikyuu.png" style="width:100%">
            <div class="text"></div>
        </div>
        <div class="mySlides fade">
            <div class="numbertext"></div>
            <img src="/image/home/dimo.png" style="width:100%">
            <div class="text"></div>
        </div>
        <a class="prev" onclick="window.plusSlides(-1)">❮</a>
        <a class="next" onclick="window.plusSlides(1)">❯</a>
        <div style="text-align:center">
            <span class="dot" onclick="goToSlide(1)"></span>
            <span class="dot" onclick="goToSlide(2)"></span>
            <span class="dot" onclick="goToSlide(3)"></span>
        </div>
    </div>
    <br>

    <section class="newarrival">
        <div class="container">
            <h1 class="topic">New Arrival</h1>
            <div class="row">
                <% newArrivals.forEach(product => { %>
                    <div class="column">
                        <a href="/detail?pid=<%= product.PID %>">
                            <img src="<%= product.PImage %>" alt="<%= product.PName %>">
                        </a>
                        <div class="description"><%= product.PName %></div>
                        <div class="price">฿ <%= product.PPrice.toFixed(2) %></div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <section class="sec1">
        <div class="container">
            <h1 class="topic">For you</h1>
            <div class="warp">
                <div class="splitimg">
                    <img class="insplit" src="/image/home/foryou/img1.png" alt="Image 1">
                </div>
                <div class="splitimg">
                    <div class="class2img">
                        <img class="topimg" src="/image/home/foryou/img2.png" alt="Image 2">
                        <img src="/image/home/foryou/img3.png" alt="Image 3">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="sec1">
        <div class="container">
            <h1 class="topic">Popular</h1>
            <div class="row">
                <% popular.slice(0, 5).forEach(product => { %>
                    <div class="column">
                        <a href="/detail?pid=<%= product.PID %>">
                            <img src="<%= product.PImage %>" alt="<%= product.PName %>">
                        </a>
                        <div class="description"><%= product.PName %></div>
                        <div class="price">฿ <%= product.PPrice.toFixed(2) %></div>
                    </div>
                <% }) %>
            </div>
            <div class="row">
                <% popular.slice(5, 10).forEach(product => { %>
                    <div class="column">
                        <a href="/detail?pid=<%= product.PID %>">
                            <img src="<%= product.PImage %>" alt="<%= product.PName %>">
                        </a>
                        <div class="description"><%= product.PName %></div>
                        <div class="price">฿ <%= product.PPrice.toFixed(2) %></div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <section class="footer1">
        <div class="Fcontainer" style="padding: 0;">
            <div class="Fwarp d-flex justify-content-start align-items-center" style="gap: 10px;">
                <div class="Fsplit2">
                    <strong><b>FOLLOW US ON</b></strong>
                </div>
                <div class="social-icons">
                    <a href="https://facebook.com" target="_blank"><i class="fab fa-facebook-f"></i></a>
                    <a href="https://twitter.com" target="_blank"><i class="fab fa-twitter"></i></a>
                    <a href="https://instagram.com" target="_blank"><i class="fab fa-instagram"></i></a>
                    <a href="https://linkedin.com" target="_blank"><i class="fab fa-discord"></i></a>
                </div>
            </div>
        </div>
        </div>
    </section>

    <section class="footer2">
        <h1 class="Fhead">Thank You For Choosing Our Shop</h1>
        <div class="Fwarp">
            <div class="Fcontent">
                <div class="Fblock">
                    <div class="Ftitle">CONTACT US</div>
                    <a href="#" class="Flink">collectopia@dscalc</a>
                    <a href="#" class="Flink">069 696 6969</a>
                </div>
            </div>
            <div class="Fblock">
                <div class="Ftitle">SUPPORT</div>
                <a href="#" class="Flink">FAQ</a>
                <a href="#" class="Flink">SHIPPING INFO</a>
                <a href="#" class="Flink">PRIVACY POLICY</a>
                <a href="#" class="Flink">TERMS & CONDITIONS</a>
                <a href="#" class="Flink">TRACK YOUR ORDER</a>
            </div>
            <div class="Fblock">
                <div class="Ftitle">ABOUT US</div>
                <a href="#" class="Flink">NEWS</a>
                <a href="#" class="Flink">ABOUT COLLECTOPIA</a>
                <a href="#" class="Flink">INVESTOR RELATIONS</a>
                <a href="#" class="Flink">CONTACT US</a>
            </div>
            <div class="Fblock">
                <div class="Ftitle">SHOP</div>
                <a href="#" class="Flink">TRENDING</a>
                <a href="#" class="Flink">BLIND BOX</a>
                <a href="#" class="Flink">COLLECTION</a>
                <a href="#" class="Flink">ANIME</a>
                <a href="#" class="Flink">GAME</a>
            </div>
        </div>
        <div class="copyright">© 2025 COLLECTOPIA ALL RIGHTS RESERVED</div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>