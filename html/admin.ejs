    <script>
        function fetchWorldTime() {
            var lat = 13.7563;
            var lon = 100.5018;
    
            $.ajax({
                method: 'GET',
                url: 'https://api.api-ninjas.com/v1/worldtime?lat=' + lat + '&lon=' + lon,
                headers: { 'X-Api-Key': 'FNrjDEPH9+C2YrsWuJ8UmA==a4u9JZRh6WcjGuLZ' },
                contentType: 'application/json',
                success: function(result) {
                    console.log('API response:', result);
                    if (result.datetime) {
                        var time = result.datetime.split(' ')[1];
                        $('#world-time').text('Bangkok: ' + time);
                    } else {
                        $('#world-time').text('No time data returned');
                    }
                },
                error: function ajaxError(jqXHR) {
                    console.error('Error:', jqXHR.status, jqXHR.responseText);
                    $('#world-time').text('Error: HTTP ' + jqXHR.status + ' - ' + jqXHR.responseText);
                }
            });
        }
    
        $(document).ready(function() {
            fetchWorldTime();
        });
    </script>
    
